# Database - Neon PostgreSQL
# Recommended for most uses (with connection pooling)
DATABASE_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require

# For uses requiring a connection without pgbouncer
DATABASE_URL_UNPOOLED=postgresql://user:password@host.region.aws.neon.tech/database?sslmode=require

# Vercel Postgres Parameters
POSTGRES_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://user:password@host.region.aws.neon.tech/database?sslmode=require
POSTGRES_USER=your_user
POSTGRES_HOST=host-pooler.region.aws.neon.tech
POSTGRES_PASSWORD=your_password
POSTGRES_DATABASE=your_database
POSTGRES_PRISMA_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/database?connect_timeout=15&sslmode=require

# Database connection parameters
PGHOST=host-pooler.region.aws.neon.tech
PGHOST_UNPOOLED=host.region.aws.neon.tech
PGUSER=your_user
PGDATABASE=your_database
PGPASSWORD=your_password

# Neon Auth (Stack Auth) - Optional
NEXT_PUBLIC_STACK_PROJECT_ID=your_project_id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_client_key
STACK_SECRET_SERVER_KEY=your_server_key

# Email Service (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Admin Configuration
ADMIN_EMAIL=your_email@example.com
